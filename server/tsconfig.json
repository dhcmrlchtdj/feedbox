{
    "include": ["bin", "lib", "test"],
    "compilerOptions": {
        "outDir": "./_build/",

        "module": "CommonJS",
        "target": "ES2019",
        "lib": ["ESNext"],

        "sourceMap": true,
        "importHelpers": false,
        "declaration": false,
        "noEmitOnError": false,
        "moduleResolution": "node",

        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,

        "strict": true,
        "noImplicitAny": false,
        "strictPropertyInitialization": true,
        "strictBindCallApply": true,
        "alwaysStrict": true,
        "noImplicitThis": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,

        "pretty": true
    }
}
