{
    "include": ["src/**/*"],
    "compilerOptions": {
        "outDir": "./_build/",

        "module": "commonjs",
        "target": "es2018",
        "lib": ["es2018"],

        "sourceMap": false,
        "importHelpers": false,
        "declaration": false,
        "removeComments": true,
        "noEmitOnError": true,
        "moduleResolution": "node",

        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,

        "strict": true,
        "noImplicitAny": false,
        "strictPropertyInitialization": false,
        "strictBindCallApply": true,
        "alwaysStrict": true,
        "noImplicitThis": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,

        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        "pretty": true
    }
}
