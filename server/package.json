{
    "name": "FeedBox",
    "version": "1.0.0",
    "description": "Mailbox is the best feed reader.",
    "main": "_build/index.js",
    "repository": "git@github.com:dhcmrlchtdj/feedbox.git",
    "author": "niris <nirisix@gmail.com>",
    "license": "MIT",
    "private": true,
    "scripts": {
        "heroku-postbuild": "yarn build",
        "build": "rm -rf ./_build/* && tsc",
        "dev": "nodemon -w ./_build _build/index.js & tsc -w & wait",
        "fmt": "prettier --write 'src/**/*.ts'",
        "start": "node ./_build/index.js"
    },
    "engines": {
        "node": "8.*",
        "yarn": "1.7.*"
    },
    "dependencies": {
        "axios": "0.18.0",
        "dotenv": "6.0.0",
        "feedparser": "2.2.9",
        "hapi": "17.5.1",
        "hapi-auth-basic": "5.0.0",
        "hapi-auth-jwt2": "8.1.0",
        "hapi-pino": "4.0.4",
        "inert": "5.1.0",
        "joi": "13.4.0",
        "jsonwebtoken": "8.3.0",
        "lru-cache": "4.1.3",
        "mailgun-js": "0.18.1",
        "make-promises-safe": "1.1.0",
        "pg": "7.4.3",
        "reflect-metadata": "0.1.12",
        "rxjs": "6.2.1",
        "typeorm": "0.2.7"
    },
    "devDependencies": {
        "@types/dotenv": "4.0.3",
        "@types/feedparser": "2.2.1",
        "@types/joi": "13.3.0",
        "@types/jsonwebtoken": "7.2.7",
        "@types/lru-cache": "4.1.1",
        "@types/node": "10.3.5",
        "nodemon": "1.17.5",
        "prettier": "1.13.5",
        "typescript": "2.9.2"
    },
    "prettier": {
        "bracketSpacing": true,
        "printWidth": 80,
        "semi": true,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "all",
        "useTabs": false
    }
}
