{
    "name": "FeedBox",
    "version": "1.0.0",
    "main": "index.js",
    "repository": "git@github.com:dhcmrlchtdj/feedbox.git",
    "author": "niris <nirisix@gmail.com>",
    "license": "MIT",
    "private": true,
    "scripts": {
        "heroku-postbuild": "yarn build",
        "build": "rm -rf ./_build && tsc",
        "start": "node ./_build/index.js",
        "dev": "nodemon -w ./_build _build/index.js & tsc -w & wait",
        "fmt": "prettier --write 'src/**/*.ts'"
    },
    "engines": {
        "node": "10.*",
        "yarn": "1.9.*"
    },
    "dependencies": {
        "axios": "0.18.0",
        "dotenv": "6.0.0",
        "feedparser": "2.2.9",
        "hapi": "17.5.4",
        "hapi-pino": "5.0.1",
        "inert": "5.1.0",
        "joi": "13.6.0",
        "mailgun-js": "0.20.0",
        "pg": "7.4.3"
    },
    "devDependencies": {
        "@types/dotenv": "4.0.3",
        "@types/node": "10.9.4",
        "nodemon": "1.18.4",
        "prettier": "1.14.2",
        "typescript": "3.0.3"
    },
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": false,
        "trailingComma": "all",
        "bracketSpacing": true,
        "arrowParens": "avoid"
    }
}
