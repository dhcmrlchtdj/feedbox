{
    "name": "FeedBox",
    "version": "1.0.0",
    "main": "index.js",
    "repository": "git@github.com:dhcmrlchtdj/feedbox.git",
    "author": "niris <nirisix@gmail.com>",
    "license": "MIT",
    "private": true,
    "scripts": {
        "heroku-postbuild": "yarn build",
        "build": "rm -rf ./_build && tsc",
        "start": "node ./_build/index.js",
        "dev": "nodemon -w ./_build _build/index.js & tsc -w & wait",
        "fmt": "prettier --write 'src/**/*.ts'"
    },
    "engines": {
        "node": "10.*",
        "yarn": "1.10.*"
    },
    "dependencies": {
        "axios": "0.18.0",
        "bell": "9.3.1",
        "dotenv": "6.1.0",
        "feedparser": "2.2.9",
        "hapi": "17.6.0",
        "hapi-pino": "5.1.0",
        "joi": "14.0.0",
        "mailgun-js": "0.21.0",
        "pg": "7.5.0",
        "sqlite3": "4.0.2",
        "typeorm": "0.2.8"
    },
    "devDependencies": {
        "@types/node": "10.12.0",
        "nodemon": "1.18.4",
        "prettier": "1.14.3",
        "reflect-metadata": "0.1.12",
        "typescript": "3.1.3"
    },
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": false,
        "trailingComma": "all",
        "bracketSpacing": true,
        "arrowParens": "avoid"
    }
}
