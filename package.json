{
    "name": "feedbox",
    "version": "1.0.0",
    "description": "Mail box is the best feed reader.",
    "main": "_build/index.js",
    "repository": "git@github.com:dhcmrlchtdj/feedbox.git",
    "author": "niris <nirisix@gmail.com>",
    "license": "MIT",
    "private": true,
    "scripts": {
        "heroku-postbuild": "yarn build",
        "build": "rm -rf ./_build/* && tsc",
        "dev": "nodemon -w ./_build & tsc -w & wait",
        "fmt": "prettier --write --parser=typescript 'src/**/*.ts'",
        "start": "node ./_build/index.js"
    },
    "engines": {
        "node": "9.9.0",
        "yarn": "1.5.1"
    },
    "dependencies": {
        "axios": "0.18.0",
        "dotenv": "5.0.1",
        "feedparser": "2.2.9",
        "hapi": "17.2.3",
        "hapi-pino": "4.0.3",
        "mailgun-js": "0.16.0",
        "make-promises-safe": "1.1.0",
        "pg": "7.4.1",
        "reflect-metadata": "0.1.12",
        "typeorm": "0.1.16"
    },
    "devDependencies": {
        "@types/feedparser": "2.2.1",
        "@types/node": "9.6.0",
        "nodemon": "1.17.2",
        "prettier": "1.11.1",
        "typescript": "2.7.2"
    },
    "prettier": {
        "bracketSpacing": true,
        "printWidth": 80,
        "semi": true,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "all",
        "useTabs": false
    }
}
