{
    "name": "feedbox",
    "version": "1.0.0",
    "description": "Mail box is the best feed reader.",
    "main": "_build/server/index.js",
    "repository": "git@github.com:dhcmrlchtdj/feedbox.git",
    "author": "niris <nirisix@gmail.com>",
    "license": "MIT",
    "private": true,
    "scripts": {
        "heroku-postbuild": "yarn build",
        "build": "rm -rf ./_build/* && tsc && NODE_ENV=production parcel build --out-dir=_build/client/ --public-url=/asset/ src/client/index.html",
        "dev": "nodemon -w ./_build/server _build/server/index.js & tsc -w & parcel watch --out-dir=_build/client/ --public-url=/asset/ src/client/index.html & wait",
        "fmt": "prettier --write --parser=typescript 'src/**/*.ts'",
        "start": "node ./_build/index.js"
    },
    "engines": {
        "node": "9.*",
        "yarn": "1.5.1"
    },
    "dependencies": {
        "axios": "0.18.0",
        "dotenv": "5.0.1",
        "feedparser": "2.2.9",
        "hapi": "17.3.1",
        "hapi-auth-basic": "5.0.0",
        "hapi-auth-jwt2": "8.1.0",
        "hapi-pino": "4.0.4",
        "inert": "5.1.0",
        "joi": "13.1.2",
        "jsonwebtoken": "8.2.1",
        "lru-cache": "4.1.2",
        "mailgun-js": "0.16.0",
        "make-promises-safe": "1.1.0",
        "pg": "7.4.1",
        "reflect-metadata": "0.1.12",
        "typeorm": "0.1.20"
    },
    "devDependencies": {
        "@types/dotenv": "4.0.3",
        "@types/feedparser": "2.2.1",
        "@types/joi": "13.0.7",
        "@types/jsonwebtoken": "7.2.6",
        "@types/lru-cache": "4.1.0",
        "@types/node": "9.6.2",
        "@vue/component-compiler-utils": "1.0.0",
        "nodemon": "1.17.3",
        "parcel-bundler": "1.7.0",
        "prettier": "1.11.1",
        "typescript": "2.8.1",
        "vue": "2.5.16",
        "vue-hot-reload-api": "2.3.0",
        "vue-router": "3.0.1",
        "vue-template-compiler": "2.5.16"
    },
    "prettier": {
        "bracketSpacing": true,
        "printWidth": 80,
        "semi": true,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "all",
        "useTabs": false
    }
}
